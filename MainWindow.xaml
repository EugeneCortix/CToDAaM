        <Label Content="z" HorizontalAlignment="Left" Margin="89,50,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label Content="Divide r by                                       parts" HorizontalAlignment="Left" Margin="8,215,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Grid.Column="1"/>
