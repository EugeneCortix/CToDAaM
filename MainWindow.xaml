<Window x:Class="Electric.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Electric"
        mc:Ignorable="d"
        Title="GridCounter" Height="450" Width="800">
    <Grid x:Name="FieldButton">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="530*"/>
            <ColumnDefinition Width="181*"/>
            <ColumnDefinition Width="89*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Build the field" HorizontalAlignment="Left" Margin="96,337,0,0" VerticalAlignment="Top" Click="Button_Click" Grid.Column="1"/>
        <TextBox x:Name="xVal" HorizontalAlignment="Left" Height="20" Margin="94,45,0,0" TextWrapping="Wrap" Text="20" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2" Grid.Column="1"/>
        <TextBox x:Name="yVal" HorizontalAlignment="Left" Height="21" Margin="94,92,0,0" TextWrapping="Wrap" Text="20" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.515,3.966" Grid.ColumnSpan="2" Grid.Column="1"/>
        <TextBox x:Name="xCrush" HorizontalAlignment="Left" Margin="94,145,0,0" TextWrapping="Wrap" Text="3" VerticalAlignment="Top" Width="120" TextAlignment="Center" Panel.ZIndex="1" Grid.ColumnSpan="2" Grid.Column="1"/>
        <TextBox x:Name="yCrush" HorizontalAlignment="Left" Margin="94,175,0,0" TextWrapping="Wrap" Text="2" VerticalAlignment="Top" Width="120" TextAlignment="Center" Panel.ZIndex="1" Grid.ColumnSpan="2" Grid.Column="1"/>
        <Image x:Name="graphImage" HorizontalAlignment="Left" Height="240" Margin="106,53,0,0" VerticalAlignment="Top" Width="420" MouseMove="graphImage_MouseMove"/>
        <Label Content="r" HorizontalAlignment="Left" Margin="0,152,0,0" VerticalAlignment="Top" FontSize="16" Panel.ZIndex="1" Grid.Column="1"/>
        <Label Content="z" HorizontalAlignment="Left" Margin="89,50,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label Content="Divide r by                                       parts" HorizontalAlignment="Left" Margin="28,139,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Grid.Column="1"/>
        <Label Content="Divide z by                                       parts" HorizontalAlignment="Left" Margin="28,170,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Grid.Column="1"/>
        <Label Content="Radius:" HorizontalAlignment="Left" Margin="94,20,0,0" VerticalAlignment="Top" Height="25" Grid.Column="1"/>
        <Label Content=" Deepness:" HorizontalAlignment="Left" Margin="90,66,0,0" VerticalAlignment="Top" Height="25" Grid.Column="1"/>
        <TextBox x:Name="sigVal" HorizontalAlignment="Left" Margin="342,323,0,0" TextWrapping="Wrap" Text="100" VerticalAlignment="Top" Width="50"/>
        <Label Content="σ" HorizontalAlignment="Left" Margin="320,319,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="wVal" HorizontalAlignment="Left" Margin="342,354,0,0" TextWrapping="Wrap" Text="1000" VerticalAlignment="Top" Width="50"/>
        <Label Content="ω" HorizontalAlignment="Left" Margin="320,350,0,0" VerticalAlignment="Top"/>
        <CheckBox Content="i" HorizontalAlignment="Left" Margin="446,360,0,0" VerticalAlignment="Top" Checked="CheckBox_Checked"/>
        <Label Grid.Column="1" Content="Source:" HorizontalAlignment="Left" Margin="92,220,0,0" VerticalAlignment="Top" Width="108" Grid.ColumnSpan="2"/>
        <TextBox x:Name="Sourcez" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="96,283,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="12"/>
        <TextBox x:Name="Sourcer" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="96,251,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="8"/>
        <Label Grid.Column="1" Content="r" HorizontalAlignment="Left" Margin="76,247,0,0" VerticalAlignment="Top"/>
        <Label Grid.Column="1" Content="z" HorizontalAlignment="Left" Margin="76,279,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="zdischarge" HorizontalAlignment="Left" Margin="123,323,0,0" TextWrapping="Wrap" Text="0,55" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="rdischarge" HorizontalAlignment="Left" Margin="123,354,0,0" TextWrapping="Wrap" Text="0,5" VerticalAlignment="Top" Width="120"/>
        <Label Content="z discharge" HorizontalAlignment="Left" Margin="28,319,0,0" VerticalAlignment="Top"/>
        <Label Content="r discharge" HorizontalAlignment="Left" Margin="28,350,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
